<!--== Start Shopping Checkout Area Wrapper ==-->
<section class="shopping-checkout-wrap">
    <div class="col-lg-12">
        <!--== Start Billing Accordion ==-->
        <div class="checkout-billing-details-wrap">
            <div class="billing-form-wrap">
                <%= form_for(user, url: usuarios_path(user)) do |f| %>

                    <div style="color: red">
                        <%= render "devise/shared/error_messages", resource: user %>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <%= f.label :first_name do %>
                                    Nombres <abbr class="required" title="required">*</abbr>
                                <% end %>
                                <%= f.text_field :first_name, class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <%= f.label :last_name do %>
                                    Apellidos <abbr class="required" title="required">*</abbr>
                                <% end %>
                                <%= f.text_field :last_name, class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <%= f.label :username do %>
                                    Usuario <abbr class="required" title="required">*</abbr>
                                <% end %>
                                <%= f.text_field :username, class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <%= f.label :role do %>
                                    Rol <abbr class="required" title="required">*</abbr>
                                <% end %>
                                <%= f.select :role, [["Seleccione", ""]] +  @roles.map { |key, value| [value, key]}, {}, class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <%= f.label :email do %>
                                    Correo electronico <span class="required">*</span>
                                <% end %>
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <%= f.label :password do %>
                                    Constraseña
                                    <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
                                    <% end %>
                                    <span class="required">*</span>
                                <% end %>
                                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <%= f.label :password_confirmation do %>
                                    Confirmar contraseña <span class="required">*</span>
                                <% end %>
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb--0">
                                <%= f.submit "Guardar", class: "btn-theme" %>
                            </div>
                        </div>
                    </div>
                    
                <% end %>
            </div>
        </div>
        <!--== End Billing Accordion ==-->
    </div>
</section>
<!--== End Shopping Checkout Area Wrapper ==-->
