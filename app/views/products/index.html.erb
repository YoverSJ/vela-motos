<!--== Start Contact Area Wrapper ==-->
<section class="contact-area contact-page-area">
  <div class="container">

    <p style="color: green"><%= notice %></p>

    <div class="tab-pane" id="orders" role="tabpanel" aria-labelledby="orders-tab">
      <div class="myaccount-content">
        <h3>Productos</h3>
        <%= link_to "New product", new_product_path %>
        <div class="myaccount-table table-responsive text-center">
          <table class="table table-bordered">
            <thead class="thead-light">
              <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.code %></td>
                  <td><%= product.name %></td>
                  <td><%= product.total_price %></td>
                  <td><%= product.stock %></td>
                  <td>
                    <%= link_to product, class: "check-btn sqr-btn" do %>
                      <i class="fa fa-eye"></i>
                    <% end %>  
                    <%= link_to edit_product_path(product), class: "check-btn sqr-btn" do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>  
                    <%= link_to product, method: :delete, class: "check-btn sqr-btn" do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</section>
<!--== End Contact Area Wrapper ==-->
