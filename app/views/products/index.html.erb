<!--== Start Contact Area Wrapper ==-->
<section class="contact-area contact-page-area">
  <div class="container" style="padding-top: 40px">

    <p style="color: green"><%= notice %></p>

    <div class="tab-pane" id="orders" role="tabpanel" aria-labelledby="orders-tab">
      <div class="myaccount-content">
        
        <div class="row mb-3">
          <div class="col-md-8">
              <h3>Productos</h3>
          </div>
          <div class="col-md-4 d-flex justify-content-end">
              <%= link_to "Nuevo producto", new_product_path, class: "btn-theme" %>
          </div>
        </div>
        <div class="myaccount-table table-responsive text-center">
          <table class="table table-bordered">
            <thead class="thead-light">
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Garant√≠a</th>
                <th>Precio Total</th>
                <th>Stock</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% unless @products.blank? %>
                <% @products.each_with_index do |product, index| %>
                  <tr>
                    <td>
                      <%= (@pagy.page - 1) * @products.limit_value + index + 1 %>
                    </td>
                    <td><%= product.name %></td>
                    <td><%= product.warranty %></td>
                    <td><%= product.total_price %></td>
                    <td><%= product.stock %></td>
                    <td>
                      <%= link_to product, class: "check-btn sqr-btn" do %>
                        <i class="fa fa-eye"></i>
                      <% end %>  
                      <%= link_to edit_product_path(product), class: "check-btn sqr-btn" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>  
                      <%= link_to product, method: :delete, class: "check-btn sqr-btn" do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6">No hay resultados</td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%# pagy_items_selector_js(@pagy) %>
          <%# render "pagy/custom_pagy_items_selector", pagy: @pagy, items: @items unless @products.blank? %>
        </div>
        <div class="d-flex justify-content-center">
          <%= render "pagy/custom_pagy_info", pagy: @pagy unless @products.blank? %>
        </div>
        <%= render "pagy/custom_pagy", pagy: @pagy unless @products.blank? %>
      </div>
    </div>

  </div>
</section>
<!--== End Contact Area Wrapper ==-->
