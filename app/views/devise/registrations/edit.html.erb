<!--== Start My Account Area Wrapper ==-->
<section class="account-area">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 m-auto">
        <div class="section-title text-center">
          <h2 class="title">Cuenta</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="register-form-content">
          <div class="row">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :username, "Usuario" %>
                    <%= f.text_field :username, readonly: true, class: "form-control" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :first_name, "Nombres" %>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :last_name, "Apellidos" %>
                    <%= f.text_field :last_name, class: "form-control" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :email, "Correo electronico" %>
                    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
                  </div>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :password do %>
                      Constraseña <i>(déjelo en blanco si no desea cambiarlo)</i>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
                    <% end %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :password_confirmation, "Confirmar contraseña" %>
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :current_password do %>
                      Contraseña actual <br><i>(necesitamos su contraseña actual para confirmar sus cambios)</i>
                    <% end %>
                    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-group">
                    <%= f.submit "Guardar", class: "btn-theme" %>
                  </div>
                </div>
              
            <% end %>
          
            <div class="col-12">
              <div class="form-group">
                <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Este seguro de que desea cancelar su cuenta?", turbo_confirm: "¿Este seguro de que desea cancelar su cuenta?" }, method: :delete, class: "btn-coupon", style: "width: 205px" %>
              </div>
            </div>

            <%= link_to "Back", root_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--== End My Account Area Wrapper ==-->


