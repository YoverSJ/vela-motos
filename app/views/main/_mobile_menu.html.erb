<!--== Start Side Menu ==-->
<div class="off-canvas-wrapper offcanvas offcanvas-start" tabindex="-1" id="AsideOffcanvasMenu"
    aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h1 id="offcanvasExampleLabel"></h1>
        <button class="btn-menu-close" data-bs-dismiss="offcanvas" aria-label="Close">menu <i
                class="fa fa-chevron-left"></i></button>
    </div>
    <div class="offcanvas-body">
        <div class="info-items">
            <ul>
                <li class="number">
                    <%= link_to "https://wa.me/+51962383474?text=Hola%20estoy%20interesado%20en%20uno%20de%20sus%20productos", target: "_blank" do %>
                        <i class="fa fa-phone"></i>+51 962 383 474
                    <% end %>
                </li>
                <li class="number">
                    <%= link_to "https://wa.me/+51975135920?text=Hola%20estoy%20interesado%20en%20uno%20de%20sus%20productos", target: "_blank" do %>
                        <i class="fa fa-phone"></i>+51 975 135 920
                    <% end %>
                </li>
                <li class="email">
                    <%= link_to "mailto:contacto@velamotos.com" do %>
                        <i class="fa fa-envelope"></i>contacto@velamotos.com
                    <% end %>
                </li>
                <% unless user_signed_in? %>
                    <li class="account">
                        <%= link_to new_user_session_path do %>
                            <i class="fa fa-user"></i>Inicar Sesión
                        <% end %>
                    </li>
                <% end %>
                <% if user_signed_in? %>
                    <div class="mobile-menu-items" style="padding-left: 22px;">
                        <ul class="nav-menu">
                            <li><a href="#"><i class="fa fa-user" style="padding-right: 8px;color:#eb3e32;"></i>  <%= current_user.username&.upcase %></a>
                                <ul class="sub-menu">
                                    <li><%= link_to 'Cuenta', edit_user_registration_path %></li>
                                    <li><%= link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete %></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                <% end %>
            </ul>
        </div>
        <!-- Mobile Menu Start -->
        <div class="mobile-menu-items">
            <ul class="nav-menu">
                <% if user_signed_in? %>
                    <li><a href="#">Dashboard</a>
                        <ul class="sub-menu">
                            <li><%= link_to usuarios_path do %><span>Usuarios</span><% end %></li>
                            <li><%= link_to products_path do %><span>Motos electricas</span><% end %></li>
                            <li><%= link_to accessories_path do %><span>Accesorios</span><% end %></li>
                        </ul>
                    </li>
                <% end %>
                <li><%= link_to root_path do %><span>Inicio</span><% end %></li>
                <li><%= link_to about_us_path do %><span>Nosotros</span><% end %>
                <li><a href="#">Catalogo</a>
                    <ul class="sub-menu">
                        <li><%= link_to electric_motorcycles_catalog_path do %><span>Motos electricas</span><% end %></li>
                        <li><%= link_to accessories_catalog_path do %><span>Accesorios</span><% end %></li>
                    </ul>
                </li>
                <li><%= link_to contact_path do %><span>Contacto</span><% end %></li>
            </ul>
        </div>
        <!-- Mobile Menu End -->
    </div>
</div>
<!--== End Side Menu ==-->