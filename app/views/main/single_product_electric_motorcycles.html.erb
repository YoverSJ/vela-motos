<!--== Start Product Area Wrapper ==-->
<section class="product-area product-best-seller-area">
    <div class="container pt--0">
    <div class="row">
        <div class="col-12">
        <div class="section-title text-center">
            <h3 class="title">Productos Relacionados</h3>
            <div class="desc">
            <p>Te recomendamos estos productos similares</p>
            </div>
        </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
        <div class="product-slider-wrap">
            <div class="swiper-container product-slider-col4-container">
                <div class="swiper-wrapper">
                    <% if @related_products.blank? %>
                        <div class="col-12">
                            <div class="alert alert-warning" role="alert">
                                No se encontraron productos
                            </div>
                        </div>
                    <% else %>
                        <% @related_products.each do |product| %>
                            <div class="swiper-slide">
                                <!--== Start Product Item ==-->
                                <div class="product-item">
                                    <div class="inner-content">
                                        <div class="product-thumb">
                                            <%= link_to single_product_electric_motorcycles_path(name: product.name.downcase.gsub(' ', '-')) do %>
                                                <img src="<%= product.imagen.blank? ? '/assets/shop/1.webp' : product.imagen %>" width="270" height="274" title="<%= product.name %>" alt="<%= product.imagen %>">
                                            <% end %>
                                            <div class="product-flag <%= product.discount.blank? || product.discount == 0 ? 'd-none' : 'd-block' %>">
                                                <ul>
                                                    <li class="discount">-<%= product.discount %>%</li>
                                                </ul>
                                            </div>
                                            <div class="product-action">
                                                <%= link_to show_product_path(product), class: "btn-product-quick-view-open", remote: true do %>
                                                    <i class="fa fa-arrows"></i>
                                                <% end %>
                                            </div>
                                            <a class="banner-link-overlay" href="shop"></a>
                                        </div>
                                        <div class="product-info">
                                            <div class="category">
                                                <ul>
                                                    <li><%= link_to product.category, electric_motorcycles_catalog_path(category: product.category) %></li>
                                                </ul>
                                            </div>
                                            <h4 class="title"><%= link_to product.name, single_product_electric_motorcycles_path(name: product.name.downcase.gsub(' ', '-'))%></h4>
                                            <div class="prices">
                                                <% if product.price != product.total_price %>
                                                    <span class="price-old">S/. <%= product.price %></span>
                                                    <span class="sep">-</span>
                                                <% end %>
                                                <span class="price">S/. <%= product.total_price %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--== End prPduct Item ==-->
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <!--== Add Swiper Arrows ==-->
            <% unless @related_products.blank? %>
                <div class="product-swiper-btn-wrap">
                    <div class="product-swiper-btn-prev">
                        <i class="fa fa-arrow-left"></i>
                    </div>
                    <div class="product-swiper-btn-next">
                        <i class="fa fa-arrow-right"></i>
                    </div>
                </div>
            <% end %>
        </div>
        </div>
    </div>
    </div>
</section>
<!--== End Product Area Wrapper ==-->


