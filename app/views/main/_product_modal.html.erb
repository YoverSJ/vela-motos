<%# @product.inspect %>
<div class="col-lg-6 col-md-6 col-12">
    <div class="thumb">
        <img src="<%= @product.imagen.blank? ? '/assets/shop/product-single/1.webp' : @product.imagen %>" width="570" height="541" alt="Alan-Shop">
    </div>
</div>
<div class="col-lg-6 col-md-6 col-12">
    <div class="content">
        
        <h4 class="title"><%= @product.name %></h4>
        <div class="prices">
            <% if @product.price != @product.total_price %>
                <del class="price-old">$<%= @product.price %></del>
            <% end %>
            <span class="price">$<%= @product.total_price %></span>
        </div>
        <p><%= @product.description %></p>
        <div class="quick-view-select">
            <div class="quick-view-select-item">
                <label for="forColor" class="form-label">Color:</label>
                <div class="product-single-item">
                    <div class="product-single-info">
                        <div class="product-color">
                        <ul class="color-list">
                            <% @colors.each do |color| %>
                            <li data-bg-color="<%= color.values[0] %>"style="background-color: <%= color.values[0] %>" title="<%= color.keys[0] %>"></li>
                            <% end %>
                        </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="action-top">
            <a class="btn btn-black" href="shop-cart">Comprar</a>
        </div>
    </div>
</div>