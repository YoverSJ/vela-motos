<!--== Start Product Area Wrapper ==-->
<section class="product-area product-default-area">
  <div class="container pt--0">
    <div class="row">
      <div class="col-12">
        <div class="section-title text-center">
          <h3 class="title">MOTOS ELECTRICAS</h3>
          <div class="desc">
            <p>ECOAMIGABLE</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-6 col-lg-3">
          <!--== Start Product Item ==-->
          <div class="product-item">
            <div class="inner-content">
              <div class="product-thumb">
                <%= link_to single_product_electric_motorcycles_path(name: product.name.downcase.gsub(' ', '-')) do %>
                  <img src="<%= product.imagen.blank? ? '/assets/shop/product-single/1.webp' : product.imagen %>" width="270" height="274" title="<%= product.name %>" alt="<%= product.imagen %>">
                <% end %>
                <div class="product-flag <%= product.discount.blank? || product.discount == 0 ? 'd-none' : 'd-block' %>">
                  <ul>
                    <li class="discount">-<%= product.discount %>%</li>
                  </ul>
                </div>
                <div class="product-action">
                  
                  <%= link_to show_product_path(product), class: "btn-product-quick-view-open", remote: true do %>
                    <i class="fa fa-arrows"></i>
                  <% end %>

                </div>
              </div>
              <div class="product-info">
                <div class="category">
                  <ul>
                    <li><%= link_to product.category, electric_motorcycles_catalog_path(category: product.category) %></li>
                  </ul>
                </div>
                <h4 class="title"><%= link_to product.name, single_product_electric_motorcycles_path(name: product.name.downcase.gsub(' ', '-'))%></h4>
                <div class="prices">
                  <% if product.price != product.total_price %>
                    <span class="price-old">S/. <%= product.price %></span>
                    <span class="sep">-</span>
                  <% end %>
                  <span class="price">S/. <%= product.total_price %></span>
                </div>
              </div>
            </div>
          </div>
          <!--== End prPduct Item ==-->
        </div>
      <% end %>
    </div>
  </div>
</section>
<!--== End Product Area Wrapper ==-->

